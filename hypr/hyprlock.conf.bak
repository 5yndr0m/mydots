image {
    monitor =
    path = 
    size = 60 # lesser side if not 1:1 ratio
    rounding = 5 # negative values mean circle
    border_size = 0
    rotate = 0 # degrees, counter-clockwise
    reload_time = 2
    reload_cmd = /home/syndrom/.config/hypr/hyprlock/playerctlock.sh --arturl
    position = -150, -309
    halign = center
    valign = center
    #opacity=0.5
}

