# INPUT FIELD
input-field {
    monitor =
    size = 250, 60
    outline_thickness = 1
    outer_color = rgba(0, 0, 0, 1)
    dots_size = 0.1 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.5 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    inner_color = rgba(0, 0, 0, 1)
    font_color = rgba(200, 200, 200, 1)
    fade_on_empty = true
    #font_family = JetBrains Mono Nerd Font Mono
    placeholder_text = <span foreground="##cdd6f4">ï€‡   $USER</span>
    hide_input = false
    position = 0, -300
    halign = center
    rounding = 10
    valign = center
    zindex = 10
}
